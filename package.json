{
  "name": "pokemon-battle-online",
  "version": "1.0.0",
  "description": "Pokemon Battle - Online Multiplayer Android App",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server -p 8080",
    "server": "cd server && npm start",
    "server:dev": "cd server && npm run dev",
    "build": "node build.js",
    "cap:sync": "node build.js && npx cap sync",
    "cap:open:android": "npx cap open android",
    "build:android": "node build.js && npx cap sync && npx cap open android"
  },
  "dependencies": {
    "@capacitor/android": "^5.5.0",
    "@capacitor/core": "^5.5.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.5.0",
    "http-server": "^14.1.1"
  }
}
